<%= form_for(@upload, multipart: true, url: {action: "create"}) do |f| %>
  <div class="form-group">
    <%= f.label(:csv_file_type, for: 'csv_type_display') %><br />
    <%= f.text_field(:csv_type, disabled: true, name: "csv_type_display", id: "csv_type_display", value: CensusLatLong.name) %>
    <%= f.hidden_field(:csv_type) %>
  </div>

  <div class="form-group">
    <%= f.label(:upload_files) %>
    <p class="help-block">Valid file formats include: <%= @extensions %></p>
    <p class="help-block">Multiple files can be selected and uploaded at one time.</p>
    <%= f.file_field(:upload_files, class: "form-control", required: true, accept: @extensions, multiple: true) %>
  </div>

  <div class="form-group">
    <%= f.label(:comment) %><br />
    <%= f.text_field(:comment, style: 'width: 100%') %>
  </div>

  <div class="actions">
    <%= link_to "Cancel", dashboards_path, class: "btn btn-default" %>
    <%= f.submit "Upload", class: "btn btn-primary" %>
  </div>
<% end %>

