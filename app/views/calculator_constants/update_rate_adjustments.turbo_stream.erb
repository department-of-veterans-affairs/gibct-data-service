<%= turbo_stream.replace "rate-adjustments-form" do %>
  <%= render partial: "calculator_constants/rate_adjustments_form",
             locals: { rate_adjustments: @rate_adjustments,
                       calculator_constants: @calculator_constants } %>
<% end %>

<%= turbo_stream.replace "apply_rates_select" do %>
  <%= render partial: "calculator_constants/apply_rates_select",
             locals: { rate_adjustments: @rate_adjustments,
                       calculator_constants: @calculator_constants } %>
<% end %>

<% @calculator_constants.each do |constant| %>
  <%= turbo_stream.replace dom_id(constant, :select) do %>
    <%= render partial: "calculator_constants/rate_adjustment_select",
               locals: { rate_adjustments: @rate_adjustments, constant: } %>
  <% end %>
<% end %>