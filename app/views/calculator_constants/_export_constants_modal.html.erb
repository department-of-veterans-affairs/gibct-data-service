<div data-export-constants-modal-target="dialog"
     class="modal fade"
     role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Form url dynamically generated by stimulus controller -->
      <%= form_with(url: "#", method: :post, data: { export_constants_modal_target: "form" }) do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Export Calculator Constants</h4>
        </div>
        <div class="modal-body">      
          <div class="form-group">
            <label for="current" style="font-weight:normal;">
              <input type="radio"
                     id="current"
                     name="export"
                     value="current"
                     data-export-constants-modal-target="radioCurrent"
                     data-action="change->export-constants-modal#toggleSelects">
              Current calculator constants
            </label>
            <br/>
            <label for="history" style="font-weight:normal;">
              <input type="radio"
                     id="history"
                     name="export"
                     value="history"
                     data-export-constants-modal-target="radioCurrent"
                     data-action="change->export-constants-modal#toggleSelects">
              From
              <select name="start_year"
                      data-export-constants-modal-target="selectStart"
                      data-action="change->export-constants-modal#updateEnd">
                <% (@earliest_available_year..1.year.ago.year).each do |year| %>
                  <option value="<%= year %>"><%= year %></option>
                <% end %>
              </select> to
              <select name="end_year"
                      data-export-constants-modal-target="selectEnd"
                      data-action="change->export-constants-modal#updateStart">
                <% ((@earliest_available_year + 1)..Time.now.year).each do |year| %>
                  <option value="<%= year %>">
                    <%= year == Time.now.year ? "Present" : year %>
                  </option>
                <% end %>
              </select>
            </label>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn dashboard-btn-danger" data-dismiss="modal">Cancel</button>
          <%= button_tag "Export",
                         class: "btn dashboard-btn-success",
                         data: { } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
