<div data-apply-rates-modal-target="dialog"
     class="modal fade"
     role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Form url dynamically generated by stimulus controller -->
      <%= form_with(url: "#", method: :post, data: { apply_rates_modal_target: "form" }) do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Apply Rate Adjustments</h4>
        </div>
        <div class="modal-body">
          <p>Please select the benefit type for which you would like to apply rate adjustments. </p>
          <div class="form-group">
            <%= render partial: "calculator_constants/apply_rates_select",
                       locals: { rate_adjustments: @rate_adjustments,
                                 calculator_constants: @calculator_constants } %>
          </div>
          <aside class="alert alert-warning" data-apply-rates-modal-target="warning">
            <p>Zero percent increase cannot be applied.</p>
            <p>No Calculator Constants associated with this benefit type.</p>
            <div>
              <p>A percentage increase of <strong><span data-apply-rates-modal-target="rateApplied"></span>%</strong> will be applied to the following calculator constants:</p>
              <ul data-apply-rates-modal-target="ul"></ul>
            </div>
          </aside>
          <p data-apply-rates-modal-target="confirm">This cannot be undone. Any unsaved changes will be lost.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn dashboard-btn-danger" data-dismiss="modal">Cancel</button>
          <%= button_tag "Apply Rate Adjustments",
                         class: "btn btn-primary",
                         data: { apply_rates_modal_target: "applyButton" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
