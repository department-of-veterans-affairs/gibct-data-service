<div class="row row-space-6">
  <div class="col-md-8">
    <% if flash[:success].present? %>
      <aside class="alert alert-success">
        <div class="errors">
          <p>The following calculator constants have been updated: </p>
          <ul>
            <% flash[:success][:updated_fields].each do |field| %>
              <li><%=field %></li>
            <% end %>
          </ul>
        </div>
      </aside>
    <% end %>
    <%= render "colas_form" %>
    <%= render "constants_form" %>
  </div>
</div>
