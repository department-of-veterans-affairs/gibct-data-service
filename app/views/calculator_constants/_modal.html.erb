<div data-constants-form-target="dialog" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with(url: apply_rate_adjustments_to_calculator_constants_path, method: :post) do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Select a Benefit Type</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= label_tag "benefit_type", "Benefit Type: "%>
            <select name="rate_id"
                    id="benefit_type"
                    data-action="change->constants-form#updateRateApplied">
              <%= @rate_adjustments.each do |rate| %>
                <option value=<%= rate.id %>><%= rate.chapterize %></option>
              <% end %>
            </select>
          </div>
          <p>A percentage increase of <strong><span data-constants-form-target="rateApplied"><%= @rate_adjustments.first.rate %></span>%</strong> will be applied to the following calculator constants:</p>
          <p>This cannot be undone. Any unsaved changes will be lost.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
