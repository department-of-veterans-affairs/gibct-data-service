<div data-constants-form-target="dialog" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with(url: apply_rate_adjustments_to_calculator_constants_path, method: :post) do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Select a Benefit Type</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= label_tag "benefit_type", "Benefit Type: "%>
            <select name="rate_id"
                    id="benefit_type"
                    data-constants-form-target="select"
                    data-action="change->constants-form#updateRateApplied">
              <%= @rate_adjustments.each do |rate_adjustment| %>
                <option value=<%= rate_adjustment.id %>
                        data-rate=<%= rate_adjustment.rate %>
                        data-constants=<%= constants_by_rate_adjustment(rate_adjustment:, constants: @calculator_constants).to_json %>>
                  <%= rate_adjustment.chapterize %>
                </option>
              <% end %>
            </select>
          </div>
          <aside class="alert alert-warning" data-constants-form-target="warning">
            <p>Zero percent increase cannot be applied.</p>
            <p>No Calculator Constants associated with benefit type.</p>
            <div>
              <p>A percentage increase of <strong><span data-constants-form-target="rateApplied"></span>%</strong> will be applied to the following calculator constants:</p>
              <ul data-constants-form-target="ul"></ul>
            </div>
          </aside>
          <p data-constants-form-target="confirm">This cannot be undone. Any unsaved changes will be lost.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
