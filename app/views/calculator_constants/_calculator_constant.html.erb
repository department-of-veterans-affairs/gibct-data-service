<tr>
  <td width="20%"
      data-constants-form-target="textCell"
      data-action="click->constants-form#enableEditing focusout->constants-form#disableEditing">
    <p><%= constant.name %></p>
    <input type="text"
           class="form-control"
           style="display: none"
           value=<%= constant.name %>
           name="calculator_constants[<%= constant.id %>][name]" />
  </td>
  <td data-constants-form-target="textCell"
      data-action="click->constants-form#enableEditing focusout->constants-form#disableEditing">
    <p class="constant-description"><%= constant.description %></p>
    <textarea class="form-control"
              style="display: none"
              name="calculator_constants[<%= constant.id %>][description]"><%= constant.description %></textarea>
  </td> 
  <td width="auto">
    <select name="calculator_constants[<%= constant.id %>][rate_adjustment_id]"
          <% if constant.benefit_type.nil? %>
            disabled
            selected
            data-constants-form-target="select"
            data-action="mouseenter->constants-form#enableSelect mouseout->constants-form#disableSelect"
          <% end %>>
      <option value=""></option>
      <% @rate_adjustments.each do |rate| %>
        <option value=<%= rate.id %> <%= "selected" if constant.rate_adjustment == rate %>><%= rate.chapterize %></option>
      <% end %>
    </select>
  </td>
  <td width="auto">1999</td>
  <td width="auto">
    <input type="number"
            class="form-control"
            required
            name="calculator_constants[<%= constant.id %>][float_value]"
            id=<%= constant.name %>
            value=1999 />
  </td>
</tr>
