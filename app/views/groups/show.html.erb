<div class="row row-space-6" style="padding-bottom: 10px">
  <div class="col-xs-12">
    <%= render partial: 'introduction' %>
  </div>
</div>

<div class="row row-space-6">
  <div class="col-xs-2">
    <strong>Id: </strong>
  </div>
  <div class="col-xs-3">
    <%= @group.id %>
  </div>
</div>

<div class="row">
  <div class="col-xs-2">
    <strong>Type: </strong>
  </div>
  <div class="col-xs-3">
    <%= @group.csv_type %>
  </div>
</div>

<div class="row">
  <div class="col-xs-2">
    <strong>Source File: </strong>
  </div>
  <div class="col-xs-3">
    <%= @group.csv %>
  </div>
</div>

<div class="row">
  <div class="col-xs-2">
    <strong>Upload Status: </strong>
  </div>
  <div class="col-xs-3">
    <%= @group.ok? ? 'succeeded' : 'failed' %>
  </div>
</div>

<div class="row">
  <div class="col-xs-2">
    <strong>Uploaded By: </strong>
  </div>
  <div class="col-xs-3">
    <%= @group.user.email %>
  </div>
</div>

<div class="row">
  <div class="col-xs-2">
    <strong>Uploaded On: </strong>
  </div>
  <div class="col-xs-3">
    <%= @group.created_at.strftime('%b %e, %Y %H:%M:%S') %>
  </div>
</div>

<div class="row" style="padding-bottom: 20px">
  <div class="col-xs-2">
    <strong>Comments: </strong>
  </div>
  <div class="col-xs-3">
    <%= @group.comment %>
  </div>
</div>

<div class="container" style="float: left;">
  <div class="row">
    <div class="col-xs-8"></div>
     <div class="col-xs-4">  
      <div class="alert alert-info" style="margin-top: -10em;" role="alert">
      <h4 class="alert-heading"><%= @group.csv_type.titleize %> File Group Data Requirements</h4><br />
        <div><%= render partial: 'info_box', collection: @requirements, as: :info %></div>
      </div>
    </div>
  </div>
</div>  
<div class="row row-space-6">
  <div class="col-lg-12">
    <%= render 'upload_messages' %>
  </div>
</div>
